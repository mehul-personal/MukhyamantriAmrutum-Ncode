<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llForwardUserRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:background="#E9E9E9"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txvHospitalTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:minHeight="30dp"
            android:paddingLeft="10dp"
            android:text="Hospital :"
            android:textColor="#3B4F63"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvHospitalValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="25dp"
            android:paddingLeft="10dp"
            android:text="Address :"
            android:textColor="#3B4F63"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/llDetailHospital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">


            <TextView
                android:id="@+id/txvAddressTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:minHeight="25dp"
                android:paddingLeft="10dp"
                android:text="Address :"
                android:textColor="#3B4F63"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txvAddressValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="20dp"
                android:paddingLeft="10dp"
                android:text="Address :"
                android:textColor="#3B4F63"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txvArgoyamitraTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="25dp"
                android:paddingLeft="10dp"
                android:text="Arogyamitra :"
                android:textColor="#3B4F63"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txvArgoyamitraValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txvAContactTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="25dp"
                android:paddingLeft="10dp"
                android:text="Contact :"
                android:textColor="#3B4F63"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txvAContactValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#3B4F63"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txvHAMTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="25dp"
                android:paddingLeft="10dp"
                android:text="Hospital Arogya Mitra(HAM) :"
                android:textColor="#3B4F63"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txvHAMValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txvHAMContactTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="25dp"
                android:paddingLeft="10dp"
                android:text="Contact :"
                android:textColor="#3B4F63"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txvHAMContactValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#3B4F63"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>